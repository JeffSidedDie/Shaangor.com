<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Shaangor's Portal</title>
	<link rel="icon" href="~/Content/Images/favicon.ico" />
	<link rel="stylesheet" href="http://bootswatch.com/flatly/bootstrap.min.css" />
	@Styles.Render("~/Content/css")
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Shaangor's Portal","Index","Home",new { area="" },new { @class="navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a href="http://dnd.shaangor.com">D&amp;D Wiki</a></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
	</div>
	<footer class="navbar-default">
		<div class="container">
			<p>Made by Jeff Polakiewicz. Flatly theme from <a href="http://bootswatch.com/flatly/">bootswatch.com</a>.</p>
		</div>
	</footer>
	<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	@RenderSection("scripts",required: false)
</body>
</html>